
      <%# 投稿１件分の表示 %>
      <div class='post-content'>
        <%# コメントに関する表示 %>
        <div class='comment'>
          <div class='comment__num'>
            <%= "0" %>
          </div>
          <div class='comment__unit'>
            comments
          </div>
        </div>
        <%# 質問本文の表示 %>
        <div class='question'>
          <div class='question-top'>
            <div class="question-top__title">
              <%=link_to memo.title ,memo_path(memo.id) %>
            </div>
            <div class='question-top__name'>
              <%= link_to memo.user.name,user_path(memo.user.id) %>
            </div>
          </div>
          <div class='question-middle'>
            <div class='question-bottom__content'>
              <%= memo.text %>
            </div>
          </div>
          <div class='question-bottom'>
            <div class='question-middle__content'>
              <%= memo.created_at.strftime('%Y/%m/%d h') %>
            </div>
          </div>
        </div>
      </div>