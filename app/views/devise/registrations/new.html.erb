<div class="main">
  <div class="devise_inner">
    <div class="form_wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
        
        <%= render 'shared/error_messages', model: f.object %>

         <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, id:"user_name", autofocus: true %>
        </div>

         <div class="field">
          <%= f.label :avatar_id, "アバターを選んでください" %><br />
          <%= f.collection_select(:avatar_id, Avatar.all, :id, :name, {}, {class:"avatar-select"}) %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

       

        <div class="devise_actions">
          <%= f.submit "新規登録", class: :devise_btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>